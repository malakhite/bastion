{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": ".",
		"declaration": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"lib": ["esNext", "dom"],
		"module": "esnext",
		"rootDir": ".",
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "esNext",
		"paths": {
			"@bastion/factbook": ["libs/factbook/src/index.ts"],
			"@bastion/sleep": ["libs/sleep/src/index.ts"],
			"@bastion/util": ["libs/util/src/index.ts"]
		}
	},
	"exclude": ["node_modules", "tmp"]
}
